  <div class="drawer-overlay" id="settings-drawer-overlay"></div>
  <div class="drawer" id="settings-drawer">
    <div class="drawer-header">
      <h2>Settings</h2>
      <button class="drawer-close" id="settings-close"><i class="fa-solid fa-xmark"></i></button>
    </div>
    <div class="drawer-content">
      <div class="settings-group">
        <h3>Appearance</h3>
        <div class="settings-item">
          <div>
            <div class="settings-label">Dark Mode</div>
            <div class="settings-description">Toggle dark/light theme</div>
          </div>
          <label class="toggle-switch">
            <input type="checkbox" id="theme-toggle">
            <span class="toggle-slider"></span>
          </label>
        </div>
      </div>
      <div class="settings-group">
        <h3>Dashboard Updates</h3>
        <div class="settings-item">
          <div>
            <div class="settings-label">Auto Refresh</div>
            <div class="settings-description">Automatically refresh dashboard data</div>
          </div>
          <label class="toggle-switch">
            <input type="checkbox" id="auto-refresh-toggle">
            <span class="toggle-slider"></span>
          </label>
        </div>
        <div class="settings-item">
          <div>
            <div class="settings-label">Refresh Rate</div>
            <div class="settings-description">How often to refresh data</div>
          </div>
          <select id="refresh-rate-select" class="settings-select">
            <option value="10000">10 seconds</option>
            <option value="30000">30 seconds</option>
            <option value="60000">1 minute</option>
            <option value="300000">5 minutes</option>
            <option value="900000">15 minutes</option>
            <option value="1800000">30 minutes</option>
          </select>
        </div>
      </div>
      <div class="settings-group">
        <h3>Data Display</h3>
        <div class="settings-item">
          <div>
            <div class="settings-label">Data Period</div>
            <div class="settings-description">Number of days to display</div>
          </div>
          <select id="data-period-select" class="settings-select">
            <option value="7">7 days</option>
            <option value="15">15 days</option>
            <option value="30">30 days</option>
          </select>
        </div>
        <div class="settings-item">
          <div>
            <div class="settings-label">Results Limit</div>
            <div class="settings-description">Number of results per card</div>
          </div>
          <select id="results-limit-select" class="settings-select">
            <option value="5">5 results</option>
            <option value="10">10 results</option>
            <option value="25">25 results</option>
          </select>
        </div>
      </div>
    </div>
  </div>
  
  <script src="/js/main.js"></script>
  <% if (scripts && scripts.includes('dashboard')) { %>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/js/dashboard.js"></script>
  <% } %>
  </body>
</html>