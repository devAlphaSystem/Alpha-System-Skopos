<aside class="sidebar" id="sidebar">
  <div class="sidebar-header">
    <a href="/" class="sidebar-brand">
      <span class="brand-icon">S</span>
      <span>Skopos</span>
    </a>
  </div>
  <nav class="sidebar-nav">
    <p class="nav-header">Menu</p>
    <ul>
      <li class="<%= (currentPage === 'overview') ? 'active' : '' %>">
        <a href="/">
          <i class="fa-solid fa-house icon"></i>
          <span>Overview</span>
        </a>
      </li>
      <li class="<%= (currentPage === 'websites') ? 'active' : '' %>">
        <a href="/websites">
          <i class="fa-solid fa-globe icon"></i>
          <span>Websites</span>
        </a>
      </li>
      <li>
        <button type="button" id="settings-btn">
          <i class="fa-solid fa-gear icon"></i>
          <span>Settings</span>
        </button>
      </li>
    </ul>
    <% if (websites && websites.length > 0) { %>
      <p class="nav-header">Websites</p>
      <ul>
        <% for (const website of websites) { %>
          <li class="<%= (currentWebsite && currentWebsite.id === website.id) ? 'active' : '' %>">
            <a href="/dashboard/<%= website.id %>">
              <i class="fa-solid fa-server icon"></i>
              <span><%= website.name %></span>
            </a>
          </li>
        <% } %>
      </ul>
    <% } %>
  </nav>
  <div class="sidebar-footer">
    <% if (user) { %>
      <div class="user-info">
        <img src="<%= userAvatarUrl ? userAvatarUrl : ('https://ui-avatars.com/api/?name=' + encodeURIComponent(user.email || 'User') + '&background=111827&color=ffffff') %>" alt="User Avatar" />
        <div class="user-meta">
          <span class="user-name"><%= user.name %></span>
          <span class="user-role"><%= user.email %></span>
        </div>
        <a href="/logout" class="logout-link" title="Logout">
          <i class="fa-solid fa-right-from-bracket"></i>
        </a>
      </div>
    <% } %>
  </div>
</aside>