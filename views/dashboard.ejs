<%- include('partials/header', {title: 'Dashboard'}) %>

<% const isArchived = currentWebsite.isArchived %>

<div class="page-wrapper <%= isArchived ? 'archived-state' : '' %>" data-website-id="<%= currentWebsite.id %>" data-is-archived="<%= isArchived %>">
  <%- include('partials/sidebar', { websites, archivedWebsites, currentWebsite, currentPage }) %>
  <div class="main-container">
    <header class="main-header">
      <div class="header-content">
        <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle Sidebar"><i class="fa-solid fa-bars"></i></button>
        <div class="header-title">
          <h1><%= currentWebsite.name %></h1>
          <p id="data-period-label">Displaying data for the last 7 days</p>
        </div>
        <div class="header-actions">
          <% if (!isArchived) { %>
            <div class="active-users-widget">
              <div class="live-indicator"></div>
              <span id="active-users-count"><%= activeUsers %></span>
              <span>Active Users</span>
            </div>
            <a href="/sessions/<%= currentWebsite.id %>" class="btn-icon" title="View Sessions"><i class="fa-solid fa-users-viewfinder"></i></a>
          <% } %>
          <button id="manual-refresh-btn" class="btn-icon" title="Refresh Dashboard" <%= isArchived ? 'disabled' : '' %>><i class="fa-solid fa-rotate"></i></button>
          <button id="website-settings-btn" class="btn-icon" title="Website Settings" <%= isArchived ? 'disabled' : '' %>><i class="fa-solid fa-sliders"></i></button>
        </div>
      </div>
      <% if (!isArchived) { %>
        <div class="update-progress-container"><div id="update-progress-bar" class="progress-bar-update"></div></div>
      <% } %>
    </header>
    
    <main class="main-content" style="padding-top: 1rem;">
      <% if (isArchived) { %>
        <div class="archived-banner">
          <i class="fa-solid fa-box-archive"></i> This website is archived. Tracking and data refresh are disabled.
        </div>
      <% } %>
      <div class="metrics-grid">
        <div class="card metric-card">
          <div class="metric-icon"><i class="fa-solid fa-eye"></i></div>
          <div class="metric-content">
            <h3>Page Views</h3>
            <p class="metric-value" id="pageviews-value"><%= metrics.pageViews %></p>
            <% if (isArchived) { %>
              <span class="metric-change positive" id="pageviews-change"><i class="fa-solid fa-arrow-up"></i> 0%</span>
            <% } else { %>
              <% if (metrics.change.pageViews >= 0) { %>
                <span class="metric-change positive" id="pageviews-change"><i class="fa-solid fa-arrow-up"></i> <%= metrics.change.pageViews %>%</span>
              <% } else { %>
                <span class="metric-change negative" id="pageviews-change"><i class="fa-solid fa-arrow-down"></i> <%= Math.abs(metrics.change.pageViews) %>%</span>
              <% } %>
            <% } %>
          </div>
          <div class="metric-chart" id="pageviews-trend-chart"></div>
        </div>
        <div class="card metric-card">
          <div class="metric-icon"><i class="fa-solid fa-users"></i></div>
          <div class="metric-content">
            <h3>Visitors</h3>
            <p class="metric-value" id="visitors-value"><%= metrics.visitors %></p>
            <% if (isArchived) { %>
              <span class="metric-change positive" id="visitors-change"><i class="fa-solid fa-arrow-up"></i> 0%</span>
            <% } else { %>
              <% if (metrics.change.visitors >= 0) { %>
                <span class="metric-change positive" id="visitors-change"><i class="fa-solid fa-arrow-up"></i> <%= metrics.change.visitors %>%</span>
              <% } else { %>
                <span class="metric-change negative" id="visitors-change"><i class="fa-solid fa-arrow-down"></i> <%= Math.abs(metrics.change.visitors) %>%</span>
              <% } %>
            <% } %>
          </div>
          <div class="metric-chart" id="visitors-trend-chart"></div>
        </div>
        <div class="card metric-card">
          <div class="metric-icon"><i class="fa-solid fa-hand-pointer"></i></div>
          <div class="metric-content">
            <h3>Engagement</h3>
            <p class="metric-value" id="engagementrate-value"><%= metrics.engagementRate %>%</p>
            <% if (isArchived) { %>
              <span class="metric-change positive" id="engagementrate-change"><i class="fa-solid fa-arrow-up"></i> 0%</span>
            <% } else { %>
              <% if (metrics.change.engagementRate >= 0) { %>
                <span class="metric-change positive" id="engagementrate-change"><i class="fa-solid fa-arrow-up"></i> <%= metrics.change.engagementRate %>%</span>
              <% } else { %>
                <span class="metric-change negative" id="engagementrate-change"><i class="fa-solid fa-arrow-down"></i> <%= Math.abs(metrics.change.engagementRate) %>%</span>
              <% } %>
            <% } %>
          </div>
          <div class="metric-chart" id="engagementrate-trend-chart"></div>
        </div>
        <div class="card metric-card">
          <div class="metric-icon"><i class="fa-solid fa-clock"></i></div>
          <div class="metric-content">
            <h3>Avg. Session</h3>
            <p class="metric-value" id="avgsession-value"><%= metrics.avgSessionDuration.formatted %></p>
            <% if (isArchived) { %>
              <span class="metric-change positive" id="avgsession-change"><i class="fa-solid fa-arrow-up"></i> 0%</span>
            <% } else { %>
              <% if (metrics.change.avgSessionDuration >= 0) { %>
                <span class="metric-change positive" id="avgsession-change"><i class="fa-solid fa-arrow-up"></i> <%= metrics.change.avgSessionDuration %>%</span>
              <% } else { %>
                <span class="metric-change negative" id="avgsession-change"><i class="fa-solid fa-arrow-down"></i> <%= Math.abs(metrics.change.avgSessionDuration) %>%</span>
              <% } %>
            <% } %>
          </div>
          <div class="metric-chart" id="avgsession-trend-chart"></div>
        </div>
      </div>

      <% if (metrics.visitors === 0 && !isArchived) { %>
        <div class="card no-data-card">
          <i class="fa-solid fa-triangle-exclamation"></i>
          <h2>No Data Available</h2>
          <p>No data recorded for this website. Ensure your tracking script is installed correctly.</p>
        </div>
      <% } else { %>
        <div class="dashboard-grid">
          <div class="card map-card loading">
            <div class="card-header">
              <h2>Visitors by Country</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div id="world-map" class="chart-container"></div>
          </div>

          <div class="card report-card loading countries-report-card" data-report-type="countryBreakdown" data-report-title="Countries">
            <div class="card-header">
              <h2>Countries</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-countries"><%- include('partials/report-table', { data: reports.countryBreakdown }) %></div>
          </div>

          <div class="card report-card loading" data-report-type="topPages" data-report-title="Top Pages">
            <div class="card-header">
              <h2>Top Pages</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-top-pages"><%- include('partials/report-table', { data: reports.topPages }) %></div>
          </div>

          <div class="card report-card loading" data-report-type="entryPages" data-report-title="Entry Pages">
            <div class="card-header">
              <h2>Entry Pages</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-entry-pages"><%- include('partials/report-table', { data: reports.entryPages }) %></div>
          </div>

          <div class="card report-card loading" data-report-type="exitPages" data-report-title="Exit Pages">
            <div class="card-header">
              <h2>Exit Pages</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-exit-pages"><%- include('partials/report-table', { data: reports.exitPages }) %></div>
          </div>

          <div class="card report-card loading" data-report-type="topReferrers" data-report-title="Top Referrers">
            <div class="card-header">
              <h2>Top Referrers</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-top-referrers"><%- include('partials/report-table', { data: reports.topReferrers }) %></div>
          </div>
          
          <div class="card report-card loading" data-report-type="topJsErrors" data-report-title="Top JS Errors">
            <div class="card-header">
              <h2>Top JS Errors</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-js-errors"><%- include('partials/report-table', { data: reports.topJsErrors }) %></div>
          </div>

          <div class="card report-card loading" data-report-type="topCustomEvents" data-report-title="Custom Events">
            <div class="card-header">
              <h2>Custom Events</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-custom-events"><%- include('partials/report-table', { data: reports.topCustomEvents }) %></div>
          </div>

          <div class="card report-card loading" data-report-type="deviceBreakdown" data-report-title="Devices">
            <div class="card-header">
              <h2>Devices</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-devices"><%- include('partials/report-table', { data: reports.deviceBreakdown }) %></div>
          </div>

          <div class="card report-card loading" data-report-type="browserBreakdown" data-report-title="Browsers">
            <div class="card-header">
              <h2>Browsers</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-browsers"><%- include('partials/report-table', { data: reports.browserBreakdown }) %></div>
          </div>

          <div class="card report-card loading" data-report-type="languageBreakdown" data-report-title="Languages">
            <div class="card-header">
              <h2>Languages</h2>
            </div>
            <div class="spinner-container">
              <div class="spinner"></div>
            </div>
            <div class="report-content" id="report-languages"><%- include('partials/report-table', { data: reports.languageBreakdown }) %></div>
          </div>
        </div>
      <% } %>
    </main>
  </div>
</div>

<div class="drawer-overlay" id="detail-drawer-overlay"></div>

<div class="drawer" id="detail-drawer">
  <div class="drawer-header">
    <h2 id="detail-drawer-title">Report Details</h2>
    <button class="drawer-close" id="detail-drawer-close"><i class="fa-solid fa-xmark"></i></button>
  </div>
  <div class="drawer-content">
    <div class="detail-drawer-content">
      <div class="detail-drawer-controls">
        <div class="detail-drawer-search">
          <input type="text" id="detail-drawer-search" placeholder="Search..." />
        </div>
      </div>
      <div id="detail-table-container" class="detail-table-container"></div>
      <div class="detail-pagination">
        <div id="detail-pagination-info" class="detail-pagination-info"></div>
        <div id="detail-pagination-controls" class="detail-pagination-controls"></div>
      </div>
    </div>
  </div>
</div>

<div class="drawer nested" id="item-detail-drawer">
  <div class="drawer-header">
    <h2 id="item-detail-drawer-title">Details</h2>
    <button class="drawer-close" id="item-detail-drawer-close"><i class="fa-solid fa-xmark"></i></button>
  </div>
  <div class="drawer-content">
    <div id="item-detail-content"></div>
  </div>
</div>

<% if (!isArchived) { %>
  <div class="drawer" id="website-settings-drawer">
    <div class="drawer-header">
      <h2>Website Settings</h2>
      <button class="drawer-close" id="website-settings-close"><i class="fa-solid fa-xmark"></i></button>
    </div>
    <div class="drawer-content">
      <div class="settings-group">
        <h3>Tracking</h3>
        <div class="settings-item">
          <div>
            <div class="settings-label">Disable tracking on localhost</div>
            <div class="settings-description">Prevent tracking on localhost/127.0.0.1</div>
          </div>
          <label class="toggle-switch">
            <input type="checkbox" id="disable-localhost-toggle" <%= currentWebsite.disableLocalhostTracking ? 'checked' : '' %>>
            <span class="toggle-slider"></span>
          </label>
        </div>
        <div class="settings-item">
          <div>
            <div class="settings-label">IP Blacklist</div>
            <div class="settings-description">Block tracking from specific IP addresses</div>
          </div>
          <button class="btn btn-secondary" id="manage-ip-blacklist-btn">Manage</button>
        </div>
      </div>
      <div class="settings-group">
        <h3>Data</h3>
        <div class="settings-item">
          <div>
            <div class="settings-label">Data Retention</div>
            <div class="settings-description">Days to keep data (0 for forever)</div>
          </div>
          <input type="number" id="data-retention-input" class="settings-select" value="<%= currentWebsite.dataRetentionDays %>" min="0">
        </div>
      </div>
    </div>
  </div>

  <div class="drawer nested" id="ip-blacklist-drawer">
    <div class="drawer-header">
      <h2>IP Blacklist</h2>
      <button class="drawer-close" id="ip-blacklist-close"><i class="fa-solid fa-xmark"></i></button>
    </div>
    <div class="drawer-content">
      <form id="add-ip-form" class="detail-drawer-controls">
        <div class="detail-drawer-search">
          <input type="text" id="ip-address-input" placeholder="Enter IP address" required>
        </div>
        <button type="submit" class="btn">Add IP</button>
      </form>
      <div class="detail-table-container" style="margin-top: 1rem;">
        <table class="detail-table">
          <thead>
            <tr>
              <th>IP Address</th>
              <th style="width: 100px; text-align: right;"></th>
            </tr>
          </thead>
          <tbody>
            <tr id="user-ip-row" style="background-color: var(--surface-color); border-bottom: 2px solid var(--border-color);">
              <td>
                <strong id="user-ip-address">Loading...</strong>
                <span style="font-size: 0.85rem; color: var(--text-secondary); margin-left: 8px;">(Your IP)</span>
              </td>
              <td style="text-align: right;">
                <button class="btn-icon btn-danger" id="add-user-ip-btn" style="display: none;" title="Block your IP">
                  <i class="fa-solid fa-ban"></i>
                </button>
                <button class="btn-icon btn-success" id="remove-user-ip-btn" style="display: none;" title="Unblock your IP">
                  <i class="fa-solid fa-circle-check"></i>
                </button>
              </td>
            </tr>
          </tbody>
          <tbody id="ip-blacklist-table-body">
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% } %>

<script>
  const initialMetrics = <%- JSON.stringify(metrics) %>;
  const initialReportData = <%- JSON.stringify(reports) %>;
</script>

<%- include('partials/footer', { scripts: ['dashboard'] }) %>